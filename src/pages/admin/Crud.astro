---
import Layout from "../../layouts/Layout.astro"
---

<Layout>

  <h1 class="text-3xl font-serif text-amber-600 mb-8 text-center">Panel de Administración</h1>
  
  <div id="errores" class="text-red-500 mb-6 text-center"></div>
  
  <section class="mb-10 bg-gray-800/80 backdrop-blur-md p-6 rounded-2xl shadow-lg">
    <h2 class="text-2xl font-semibold text-amber-400 mb-4">Agregar nuevo plato</h2>
    <div class="grid gap-4 md:grid-cols-2">
      <input id="nombre" placeholder="Nombre"
             class="px-4 py-3 rounded-lg border border-gray-700 bg-gray-700 text-white focus:outline-none focus:border-amber-400 transition-colors"/>
      <input id="ingredientes" placeholder="Ingredientes"
             class="px-4 py-3 rounded-lg border border-gray-700 bg-gray-700 text-white focus:outline-none focus:border-amber-400 transition-colors"/>
      <input id="precio" placeholder="Precio" type="number"
             class="px-4 py-3 rounded-lg border border-gray-700 bg-gray-700 text-white focus:outline-none focus:border-amber-400 transition-colors"/>
      <select id="categoria"
              class="px-4 py-3 rounded-lg border border-gray-700 bg-gray-700 text-white focus:outline-none focus:border-amber-400 transition-colors">
        <option value="">Cargando categorías...</option>
      </select>
    </div>
    <button id="btnAgregar"
            class="mt-4 w-full md:w-auto bg-amber-500 hover:bg-amber-600 text-gray-900 font-medium py-3 px-6 rounded-lg shadow-md transition-colors">
      Agregar
    </button>
  </section>
  
  <section class="mb-10 bg-gray-800/80 backdrop-blur-md p-6 rounded-2xl shadow-lg">
    <h2 class="text-2xl font-semibold text-amber-400 mb-4">Actualizar precio de un plato</h2>
    <div class="grid gap-4 md:grid-cols-2">
      <input id="updateId" placeholder="ID del plato"
             class="px-4 py-3 rounded-lg border border-gray-700 bg-gray-700 text-white focus:outline-none focus:border-amber-400 transition-colors"/>
      <input id="updatePrecio" placeholder="Nuevo precio" type="number"
             class="px-4 py-3 rounded-lg border border-gray-700 bg-gray-700 text-white focus:outline-none focus:border-amber-400 transition-colors"/>
    </div>
    <button id="btnActualizar"
            class="mt-4 w-full md:w-auto bg-amber-500 hover:bg-amber-600 text-gray-900 font-medium py-3 px-6 rounded-lg shadow-md transition-colors">
      Actualizar
    </button>
  </section>
  
  <section class="bg-gray-800/80 backdrop-blur-md p-6 rounded-2xl shadow-lg">
    <h2 class="text-2xl font-semibold text-amber-400 mb-4">Platos disponibles</h2>
    <div id="platos" class="grid gap-4 md:grid-cols-2 lg:grid-cols-3"></div>
  </section>
  
  <script type="module" src="/scripts/api.js"></script>
</Layout>


<style>
  body{background-color: rgb(44, 42, 42);}
</style>