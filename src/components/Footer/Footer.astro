<section id="contacto" class="py-20 bg-gray-900 text-white">
  <div class="container mx-auto px-6">

    <!-- Título de la sección -->
    <div class="text-center mb-16">
      <span class="text-amber-400 font-medium tracking-wider uppercase text-sm">Contacto</span>
      <h2 class="text-4xl md:text-5xl font-light mt-4 mb-6">
        Reserva tu <span class="font-serif italic">Mesa</span>
      </h2>
      <div class="w-16 h-0.5 bg-amber-400 mx-auto mb-6"></div>
      <p class="text-lg text-gray-300 max-w-2xl mx-auto">
        Contáctanos para reservar tu mesa y vivir una experiencia gastronómica inolvidable
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-16">

      <!-- Información de contacto -->
      <div class="space-y-8">
        <h3 class="text-2xl font-light mb-6">Información de Contacto</h3>
        <div class="space-y-6">

          <!-- Dirección -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-amber-600 flex items-center justify-center">
              <i class="ri-map-pin-line text-white"></i>
            </div>
            <div>
              <h4 class="font-medium">Dirección</h4>
              <p class="text-gray-300">Calle Gran Vía 45, 28013 Madrid</p>
            </div>
          </div>

          <!-- Teléfono -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-amber-600 flex items-center justify-center">
              <i class="ri-phone-line text-white"></i>
            </div>
            <div>
              <h4 class="font-medium">Teléfono</h4>
              <p class="text-gray-300">+34 91 234 5678</p>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-amber-600 flex items-center justify-center">
              <i class="ri-mail-line text-white"></i>
            </div>
            <div>
              <h4 class="font-medium">Email</h4>
              <p class="text-gray-300">reservas@bellavista.es</p>
            </div>
          </div>

          <!-- Horarios -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-amber-600 flex items-center justify-center">
              <i class="ri-time-line text-white"></i>
            </div>
            <div>
              <h4 class="font-medium">Horarios</h4>
              <div class="text-gray-300">
                <p>Mar - Sáb: 19:00 - 23:30</p>
                <p>Dom: 13:00 - 16:00</p>
              </div>
            </div>
          </div>

        </div>
      </div>

      <!-- Formulario de contacto -->
      <div>
        <form id="contacto-restaurante" data-readdy-form="true" class="space-y-6">

          <!-- Nombre y Email -->
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="nombre" class="block text-sm font-medium mb-2">Nombre *</label>
              <input id="nombre" name="nombre" type="text" required
                     class="w-full px-4 py-3 bg-gray-800 border border-gray-700 text-white focus:border-amber-400 focus:outline-none transition-colors">
            </div>
            <div>
              <label for="email" class="block text-sm font-medium mb-2">Email *</label>
              <input id="email" name="email" type="email" required
                     class="w-full px-4 py-3 bg-gray-800 border border-gray-700 text-white focus:border-amber-400 focus:outline-none transition-colors">
            </div>
          </div>

          <!-- Teléfono y Fecha -->
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="telefono" class="block text-sm font-medium mb-2">Teléfono</label>
              <input id="telefono" name="telefono" type="tel"
                     class="w-full px-4 py-3 bg-gray-800 border border-gray-700 text-white focus:border-amber-400 focus:outline-none transition-colors">
            </div>
            <div>
              <label for="fecha" class="block text-sm font-medium mb-2">Fecha preferida</label>
              <input id="fecha" name="fecha" type="date"
                     class="w-full px-4 py-3 bg-gray-800 border border-gray-700 text-white focus:border-amber-400 focus:outline-none transition-colors">
            </div>
          </div>

          <!-- Número de personas -->
          <div>
            <label for="personas" class="block text-sm font-medium mb-2">Número de personas</label>
            <select id="personas" name="personas"
                    class="w-full px-4 py-3 bg-gray-800 border border-gray-700 text-white focus:border-amber-400 focus:outline-none transition-colors pr-8">
              <option value="1">1 persona</option>
              <option value="2">2 personas</option>
              <option value="3">3 personas</option>
              <option value="4">4 personas</option>
              <option value="5">5 personas</option>
              <option value="6">6 personas</option>
              <option value="7">7 personas</option>
              <option value="8">8 personas</option>
              <option value="mas">Más de 8 personas</option>
            </select>
          </div>

          <!-- Mensaje adicional -->
          <div>
            <label for="mensaje" class="block text-sm font-medium mb-2">Mensaje adicional</label>
            <textarea id="mensaje" name="mensaje" rows="4" maxlength="500"
                      placeholder="Alergias, ocasión especial, preferencias..."
                      class="w-full px-4 py-3 bg-gray-800 border border-gray-700 text-white focus:border-amber-400 focus:outline-none transition-colors resize-none"></textarea>
            <div class="text-right text-sm text-gray-400 mt-1">0/500</div>
          </div>

          <!-- Botón enviar -->
          <button type="submit"
                  class="w-full bg-amber-600 hover:bg-amber-700 text-white py-4 px-8 font-medium transition-colors disabled:opacity-50 disabled:cursor-not-allowed cursor-pointer">
            Enviar Reserva
          </button>

        </form>
      </div>

    </div>
  </div>
</section>
